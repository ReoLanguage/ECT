<ajaxConfig>
	
	<group ajaxRef="Reo">

	<!-- Page refreshing. -->
	
	<element ajaxRef="networks">
		<event type="manual">
		<requestHandler type="std:SimpleRequest" method="get">
			<target>/refresh/networks</target>
			<parameter/>
		</requestHandler>
		<responseHandler type="std:InnerHTML">
			<parameter>content</parameter>
		</responseHandler>
		</event>
	</element>

	<element ajaxRef="network">
		<event type="manual">
		<requestHandler type="std:SimpleRequest" method="get">
			<target>/refresh/networks/0</target>
			<parameter/>
		</requestHandler>
		<responseHandler type="std:InnerHTML">
			<parameter>content</parameter>
		</responseHandler>
		</event>
	</element>
	
