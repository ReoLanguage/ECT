	</element>
	
	<element ajaxRef="log">
		<event type="manual">
		<requestHandler type="std:SimpleRequest" method="get">
			<target>/refresh/log</target>
			<parameter/>
		</requestHandler>
		<responseHandler type="std:InnerHTML">
			<parameter>content</parameter>
		</responseHandler>
		</event>
	</element>
	
	
	<!-- Timer events. -->
	
	<element ajaxRef="monitor">
		<event type="timer">
		<requestHandler type="std:SimpleRequest" method="get">
			<target>/actions/monitor</target>
			<parameter/>
		</requestHandler>
		<responseHandler type="std:InnerHTML">
			<parameter>monitor</parameter>
		</responseHandler>
		</event>
	</element>

  </group>
  
</ajaxConfig>
